@model DeWay.Models.Product

@{
    ViewBag.Title = "Edit";
}

<h1 style="color:#3348eb">編輯</h1>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
        @Html.HiddenFor(model => model.pdtID, "商品編號")

        <div style="display:none">
            @Html.LabelFor(model => model.selID, "賣家編號", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input id="selID" name="selID" type="text" class="form-control" required value="@Session["selID"]" />
                @*@Html.EditorFor(model => model.selID)*@
                @*@Html.DropDownList("selID", null, htmlAttributes: new { @class = "form-control" })*@
               @* @Html.ValidationMessageFor(model => model.selID, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.pdtName, "商品名稱", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.pdtName, new { htmlAttributes = new { @class = "form-control" } })
               @* @Html.ValidationMessageFor(model => model.pdtName, "", new { @class = "text-danger" })*@
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.pdtDescribe, "商品描述", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.pdtDescribe, new { htmlAttributes = new { @class = "form-control " } })
                @*@Html.ValidationMessageFor(model => model.pdtDescribe, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Discontinued, "是否上架", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Discontinued)
                   @* @Html.ValidationMessageFor(model => model.Discontinued, "", new { @class = "text-danger" })*@
                </div>
            </div>
        </div>
        <div style="display:none">
            @Html.LabelFor(model => model.pdtDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.pdtDate, new { htmlAttributes = new { @class = "form-control" } })
                @*@Html.ValidationMessageFor(model => model.pdtDate, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div style="display:none">
            @Html.LabelFor(model => model.ctgID, "ctgID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.selID);
                @*@Html.DropDownList("ctgID", null, htmlAttributes: new { @class = "form-control" })*@
                @*@Html.ValidationMessageFor(model => model.ctgID, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="儲存" class="alert alert-primary" role="alert" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("回到賣場商品", "Index")

</div>

