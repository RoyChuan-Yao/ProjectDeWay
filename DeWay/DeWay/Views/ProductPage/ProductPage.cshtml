        <hr />
        <section id="ReviewSection">
            <h2>購買評價</h2>
            <div>
                @Html.Action("_GetReviewSection", "Review", new { productID = Model.pdtID })
            </div>
        </section>
        <hr />
        <section id="QASection">
            <h2>QA問答區</h2>
            @Html.Action("_CreateQA", "QAs", new { productID = Model.pdtID })
