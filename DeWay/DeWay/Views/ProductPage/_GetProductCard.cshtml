@model DeWay.Models.Product
    @{ 
        int price = Convert.ToInt32(@Model.Specification.FirstOrDefault().Price);
    }
<div class="card col-12 col-md-2 mt-5">
    <div class="card-body img-pad-1">
        <img src="@Model.ProductImage.FirstOrDefault().pdtImage" class="shadow rounded card-img-top img-wh " alt="
        照片去惹" >
        <p class="text-secondary text-secondary-1">商品名稱:<br/><span><a href="@Url.Action("ProductPage","ProductPage",new { pdtID=Model.pdtID})">@Model.pdtName</a></span></p>
        <p class="text-secondary text-secondary-2">價格:<span>@price</span></p>
        <div class="d-flex justify-content-between">
            <img src="~/images/Img-like-7.png" class="likeImg card-img-top img-wh-2 wishIcon" alt="...">
            <img src="~/images/Img-shopping-cart-12.png" class="card-img-top img-wh-2 cartIcon" alt="..." specID="@Model.Specification.FirstOrDefault().spcID" />
        </div>
    </div>
</div>
