@model DeWay.Models.Order

@{
    ViewBag.Title = "Details";
}

    <div class="container">
        <link href="~/Content/DeWayWebHome.css" rel="stylesheet" />

        <div class="col-8 offset-2 ">



            <h2 class="col-4 offset-4 rounded text-lg-center " style="margin-top:200px;">   訂單詳細資料  </h2>
            <br />
            <br />
            <div>


                <div class="col-6 offset-3">
                    <div class=" " style="font-size:20px;">
                        <span class="col-sm-2  text-primary">
                            收件人姓名:

                        </span>
                        <span class="col-sm-10  text-dark orderDA">
                            @Html.DisplayFor(model => model.recName)
                        </span>
                    </div>
                    <div class=" " style="font-size:20px;">
                        <span class="col-sm-2 text-primary">
                            市:

                        </span>
                        <span class="col-sm-10  text-dark orderDA">
                            @Html.DisplayFor(model => model.recCity)
                        </span>
                    </div>

                    <div class=" " style="font-size:20px;">
                        <span class="col-sm-2 text-primary">
                            區:

                        </span>
                        <span class="col-sm-10  text-dark orderDA">
                            @Html.DisplayFor(model => model.recDist)
                        </span>
                    </div>
                    <div class=" " style="font-size:20px;">
                        <span class="col-sm-2 text-primary">
                            地址:

                        </span>
                        <span class="col-sm-10  text-dark orderDA">
                            @Html.DisplayFor(model => model.recAddress)
                        </span>
                    </div>
                    <div class=" " style="font-size:20px;">
                        <span class="col-sm-2 text-primary">
                            收件人電話:

                        </span>
                        <span class="col-sm-10  text-dark orderDA">
                            @Html.DisplayFor(model => model.recPhone)
                        </span>
                    </div>
                    <div class=" " style="font-size:20px;">
                        <span class="col-sm-2 text-primary">
                            付款日期:

                        </span>
                        <span class="col-sm-10  text-dark orderDA">
                            @Html.DisplayFor(model => model.pmtDate)
                        </span>
                    </div>
                    <div class=" " style="font-size:20px;">
                        <span class="col-sm-2 text-primary">
                            訂單日期:

                        </span>
                        <span class="col-sm-10  text-dark orderDA">
                            @Html.DisplayFor(model => model.odrDate)
                        </span>
                    </div>


                    <div class=" " style="font-size:20px;">
                        <span class="col-sm-2 text-primary">
                            出貨日期:

                        </span>
                        <span class="col-sm-10  text-dark orderDA">
                            @Html.DisplayFor(model => model.shpDate)
                        </span>
                    </div>

                    <div class=" " style="font-size:20px;">
                        <span class="col-sm-2 text-primary">
                            訂單備註:

                        </span>
                        <span class="col-sm-10  text-dark orderDA">
                            @Html.DisplayFor(model => model.odrNote)
                        </span>
                    </div>



                    <div class=" " style="font-size:20px;">
                        <span class="col-sm-2 text-primary">
                            託運單號:

                        </span>
                        <span class="col-sm-10  text-dark orderDA">
                            @Html.DisplayFor(model => model.traceNumber)
                        </span>
                    </div>



                    <div class=" " style="font-size:20px;">
                        <span class="col-sm-2 text-primary">
                            第三方金流單號:

                        </span>
                        <span class="col-sm-10  text-dark orderDA">
                            @Html.DisplayFor(model => model.cashFlowID)
                        </span>
                    </div>



                    <div class=" " style="font-size:20px;">
                        <span class="col-sm-2 text-primary">
                            訂單狀態:

                        </span>
                        <span class="col-sm-10  text-dark orderDA">
                            @Html.DisplayFor(model => model.OrderStatus.odrStatus)
                        </span>
                    </div>


                    <div class=" " style="font-size:20px;">
                        <span class="col-sm-2 text-primary">
                            付款方式:

                        </span>
                        <span class="col-sm-10  text-dark orderDA">
                            @Html.DisplayFor(model => model.PaymentMethod.pmtMethod)
                        </span>
                    </div>
                    <p class="orderDB">
                        @Html.ActionLink("編輯", "Edit", new { id = Model.odrID }@*, new { @class="orderDB"}*@)
                        /
                        @Html.ActionLink("回到前一頁", "Index"@*,new { @class="orderDB"}*@)
                    </p>


                </div>



            </div>


        </div>
    </div>