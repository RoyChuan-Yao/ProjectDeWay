@section Script{
    <script>

        $(`.deleteBtn`).on(`click`, (e) => {
            var pdtID = $(e.target).attr('pdtID');
            if (confirm("你確定要刪除嗎？")) {
                $.ajax({
                url: "@Url.Action("AddToWishList","WishLists")?pdtID=" + pdtID,
                method: "post",
            });
            }

        })
        $('.cartIcon').click((e) => {
            var specID = $(e.target).attr('specID');
            $.ajax({
                url: "@Url.Action("AddToMyCart","Cart")?spcID=" + specID,
                method: "post",
            });
        });

    </script>
}



