        <nav class="navbar navbar-expand-lg navbar-light bg-light ">
            <div class="container">

                @*<a class="navbar-brand" href="#">DeWay</a>*@

                @Html.ActionLink("DeWay", "Index", "Home", new { }, new { @class = "navbar-brand DeWay" })


                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse bg-light" id="navbarToggleExternalContent">
                    <form class="form-inline mr-auto" method="post" action="@Url.Action("Index","SearchForLayout")" >
                        <input class="form-control mr-sm-1 " type="search" placeholder="Search" aria-label="Search" name="ProductName">
                        <button class="btn btn-outline-secondary my-1 my-sm-0 ml-auto" type="submit">Search</button>
                    </form>
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                所有分類
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="#">衣著良品</a>
                                <a class="dropdown-item" href="#">包包提袋</a>
                                <a class="dropdown-item" href="#">配件飾品</a>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="#">如何開間設計館</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">推薦商品</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">主題活動<span class="sr-only">(current)</span></a>
                        </li>

                        <li class="nav-item ">

                            @*<a class="nav-link" href="#">登入</a>*@
                            @if (Session["memberID"] == null) 
                                    { 
                                    @Html.ActionLink("登入", "Login", "login", new { }, new { @class = "nav-link", })
                                    }
                            else    {
                                    @Html.ActionLink("登出", "Logout", "login", new { }, new { @class = "nav-link" })
                                    }



                        </li>
                        
                    </ul>

                    <ul class="navbar-nav ml-auto">

                     

                        <li>
                            <a style="width:48px;height:40px" class="nav-link " href="@Url.Action("SellerCreate","SellerCertification")"><img src="~/images/img-shop-4.png" style="width:50%" /></a>
                        </li>
                        <li>
                            <a style="width:48px;height:40px" class="nav-link " href="@Url.Action("myCart","Cart")"><img src="~/images/Img-shopping-cart-12.png" style="width:50%" /></a>
                        </li>
                        <li>
                            <a style="width:48px;height:40px" class="nav-link " href="@Url.Action("Index","WishLists")"><img src="~/images/Img-like-7.png" style="width:50%" /></a>
                        </li>

                        <li class="nav-item dropdown">
                            <a style="width:48px;height:40px" class="nav-link " href="#" id="navbarDropdownMenuLink2" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img src="~/images/img-user-15.png" style="width:50%" /></a>
                            <div class="dropdown-menu dropdown-menu-left" aria-labelledby="navbarDropdownMenuLink2">

                                @Html.ActionLink("會員中心", "odrIndex", "MemberHome", new { }, new { @class = "dropdown-item" })
                                @Html.ActionLink("商品收藏", "Index", "WishLists", new { }, new { @class = "dropdown-item" })
                                @Html.ActionLink("帳號設定", "pwdEdit", "MemberHome", new { }, new { @class = "dropdown-item" })
                                @Html.ActionLink("通知中心", "IndexForMember", "ntfRecordsAdm", new { }, new { @class = "dropdown-item" })
                                @Html.ActionLink("開設計館", "", "", new { }, new { @class = "dropdown-item" })
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a style="width:48px;height:40px" class="nav-link " href="#" id="navbarDropdownMenuLink3" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img src="~/images/Img-settings-11.png" style="width:50%" /></a>
                            <div class="dropdown-menu dropdown-menu-left" aria-labelledby="navbarDropdownMenuLink3">
                                @Html.ActionLink("商品上架", "Create", "Product_create", new { }, new { @class = "dropdown-item" })
                                @Html.ActionLink("賣家中心", "OrderIndex", "SellerHome", new { }, new { @class = "dropdown-item" })
                                @Html.ActionLink("賣場設定", "editMarket", "SellerHome", new { }, new { @class = "dropdown-item" })
                            </div>
                        </li>

                    </ul>
                </div>

            </div>

        </nav>
    </header>




