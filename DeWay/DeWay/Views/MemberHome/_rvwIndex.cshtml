@model IEnumerable<DeWay.Models.Order>


<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet" />
@{
    int i = 0;
    short[] star = new short[Model.Count()];
    Layout = null;
}

<div id="test"></div>

@foreach (var item in Model)
{

    if (item.Review.Count() != 0)
    {
        star[i] = item.Review.FirstOrDefault().rvwStar;
        <input class="@i" type="hidden" value="@star[i]" />
        <div class="card">
            <div class="card-header">
                <div class="star" id="@star[i]" Stars="@star[i]" style=" font-size: 30px">

                </div>
                @Html.DisplayFor(modelItem => item.Review.FirstOrDefault().rvwTime)


            </div>
            <div class="card-body row">
                <div class="col-5">
                    <img src="~/images/@Html.Action("getImage", new { id = item.odrID })" style="width:200px" class="img-responsive img-rounded" />
                </div>
                <div class="col-7">
                    To:@Html.DisplayFor(modelItem => item.Review.FirstOrDefault().Product.Seller.selCompany)<br />
                    @Html.DisplayFor(modelItem => item.Review.FirstOrDefault().rvwContent)
                </div>
            </div>


        </div>
        <br />
        if (i < Model.Count() - 1)
        {
            i++;
        }
    }
    else
    {

        //var a = item.odrID;

        <div class="card">
            <div class="card-header">
                <button class="Button" data-toggle="modal" data-target="#form1">新增評論</button>
                <div></div>

                <input id="odrID" type="hidden" value="@item.odrID" />
            </div>
            <div class="card-body row">
                <div class="col-5">
                    <img src="~/images/@Html.Action("getImage", new { id = item.odrID })" style="width:200px" class="img-responsive img-rounded" />
                    @Url.Action("getImage", new { id = item.odrID })"
                </div>
                <div class="col-7">
                    @Html.DisplayFor(modelItem => item.Cart_OrderDetail.FirstOrDefault().Specification.Product.Seller.selCompany)<br />
                    @Html.DisplayFor(modelItem => item.odrDate)


                </div>

            </div>
        </div>
    }
}

@using (Html.BeginForm("rvwCreate", "MemberHome", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="modal fade" id="form1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Review</h4>
                <button data-dismiss="modal" class="close">&times;</button>
            </div>
            <div class="modal-body">
                <input class="odrID" type="hidden" name="odrID" />
                <div class="form-group">
                    <p>評價內容</p>
                    <div class="col-md-9">
                        <input id="rvwContent" type="text" name="rvwContent" />
                    </div>
                </div>
                <div class="form-group">
                    <p>評價等級</p>
                    <div class="col-md-9">
                        <div></div>
                        <input class="rvwStar" type="text" name="rvwStar" />
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <input type="submit" value="Create" class="btn btn-default" />

            </div>

        </div>

    </div>


</div>

}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/stars.js"></script>
@*<script src="~/Scripts/stars.min.js"></script>*@
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script>
    $(`.Button`).next().stars();
        $(`#test`).stars(); 

     //$(`input.rvwStar`).prev().stars();
    function getStar(starCount) {
        var starsArray = ["☆", "☆", "☆", "☆", "☆"];
        var result = "";
        for (var i = 0; i < starCount; i++) {
            starsArray.unshift("★");
        }
        for (var i = 0; i < 5; i++) {
            result += starsArray[i];
        }
        var result = `<span style=" font-size: 30px;color:#E4AD22">${result}</span>`

        return result
    }

    $(`.star`).each((index, element) => {
        $(element).html(
            getStar($(element).attr("Stars"))
        )
    })

    $(`.Button`).on("click", function () {

        let odrid = $(this).next().val();

        $(`input.odrID`).attr("value", odrid);
      
    });


</script>


